rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /vehicleTypes/{vehicleTypeId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /drivers/{driverId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /vehicles/{vehicleId} {
      allow read, create, update, delete: if request.auth != null;
    }
  }
}
