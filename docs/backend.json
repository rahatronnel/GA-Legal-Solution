{
  "entities": {
    "vehicleType": {
      "title": "Vehicle Type",
      "description": "Represents a type of vehicle.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the vehicle type."
        },
        "ownership": {
          "type": "string",
          "description": "The ownership type of the vehicle.",
          "enum": ["Company Vehicle", "Rental Vehicle", "Covered Van"]
        }
      },
      "required": ["name", "ownership"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/vehicleTypes/{vehicleTypeId}": {
      "schema": {
        "$ref": "#/entities/vehicleType"
      },
      "description": "Stores all vehicle types."
    }
  }
}
