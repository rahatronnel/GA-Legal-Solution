{
  "entities": {
    "vehicleType": {
      "title": "Vehicle Type",
      "description": "Represents a type of vehicle.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the vehicle type."
        }
      },
      "required": ["name"]
    },
    "driver": {
      "title": "Driver",
      "description": "Represents a driver.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the driver."
        },
        "licenseNumber": {
          "type": "string",
          "description": "The driver's license number."
        },
        "contactNumber": {
          "type": "string",
          "description": "The driver's contact number."
        }
      },
      "required": ["name", "licenseNumber", "contactNumber"]
    },
    "vehicle": {
      "title": "Vehicle",
      "description": "Represents a vehicle.",
      "type": "object",
      "properties": {
        "make": {
          "type": "string",
          "description": "The make of the vehicle."
        },
        "model": {
          "type": "string",
          "description": "The model of the vehicle."
        },
        "registrationNumber": {
          "type": "string",
          "description": "The registration number of the vehicle."
        },
        "ownership": {
          "type": "string",
          "description": "The ownership type of the vehicle.",
          "enum": ["Company Vehicle", "Rental Vehicle", "Covered Van"]
        },
        "vehicleTypeId": {
          "type": "string",
          "description": "The ID of the associated vehicle type."
        },
        "driverId": {
          "type": "string",
          "description": "The ID of the assigned driver."
        },
        "documents": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of URLs to vehicle documents."
        }
      },
      "required": ["make", "model", "registrationNumber", "ownership", "vehicleTypeId", "driverId"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/vehicleTypes/{vehicleTypeId}": {
      "schema": {
        "$ref": "#/entities/vehicleType"
      },
      "description": "Stores all vehicle types."
    },
    "/drivers/{driverId}": {
      "schema": {
        "$ref": "#/entities/driver"
      },
      "description": "Stores all drivers."
    },
    "/vehicles/{vehicleId}": {
      "schema": {
        "$ref": "#/entities/vehicle"
      },
      "description": "Stores all vehicles."
    }
  }
}
